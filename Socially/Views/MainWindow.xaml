<Window x:Class="Socially.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Socially.ViewModels"
        Title="{Binding Path=WindowTitle}" Height="350" Width="525" Icon="Gfx/favicon.ico" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <TextBlock Text="{Binding Path=WindowTitle}"></TextBlock>

</Window>